@using Assignment2Project.Areas.Admin.Models
@model RoomViewModel

@{
    ViewData["Title"] = "Edit Room";
}

<div>
    <form method="post" asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Room.Id" name="id" />

        <h1 class="mb-3">Edit Room</h1>
        <hr />
        <div class="my-3">
            @Html.DropDownListFor(m => m.Room.CategoryId, Model.CategoryList, "Select a category", new {@class = "form-select"})
            <span asp-validation-for="Room.CategoryId" class="text-danger"></span>
        </div>
        <div class="my-3">
            @Html.DropDownListFor(m => m.Room.InstitutionId, Model.InstitutionList, "Select a institution", new {@class = "form-select"})
            <span asp-validation-for="Room.InstitutionId" class="text-danger"></span>
        </div>
        <div class="my-3">
            <input asp-for="Room.Name" class="form-control form-control" type="text" placeholder="Name">
            <span asp-validation-for="Room.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-success w-100">Edit</button>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-primary mt-3">Back to List</a>
        </div>
    </form>
</div>
