@using Assignment2Project.Areas.Admin.Models
@model List<ManageUserRoleViewModel>
@{
    ViewData["Title"] = "ManageInstitution";
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage @Model.FirstOrDefault().User.Fname 's Institution</h2>
        </div>
        <div class="card-body">
             <select class="form-select" aria-label="Default select example">
                <option selected>Institution</option>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <option value="@Model[i].Institution.Name">@Model[i].Institution.Name</option>
                
                }               
            </select>
        </div>
        <div class="card-footer">
            <button class="btn btn-info" type="submit">Update</button>
            <a class="btn btn-danger" asp-action="Index">Cancel</a>
        </div>
    </div>
</form>
