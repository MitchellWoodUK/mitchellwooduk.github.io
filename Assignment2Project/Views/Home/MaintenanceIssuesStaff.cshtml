@model IEnumerable<IssueViewModel>
@{
    ViewData["Title"] = "Issues Page";
}
<a asp-controller="MaintenanceIssue" asp-action="CreateStaff" class="btn btn-info mb-3">Create New Issue</a>

<form method="get" class="my-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col mt-3">
                <p class="lh-1">Search by your username to find your closed tickets:</p>
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="search" id="q" name="q" value="@ViewData["q"]">
                    <button class="input-group-text" id="search" type="submit">Search</button>
                </div>
            </div>           
        </div>
</form>
<div class="col">
    <div class="card shadow card-bg p-2">
        <div class="card-body">
            <h3 class="mb-3 card-text">Open Maintenance Issues:</h3>

            <table class="table">
                <thead>
                    <tr>
                        <th class="card-text">Logged By</th>
                        <th class="card-text">Room</th>
                        <th class="card-text">Assets</th>
                        <th class="card-text">Time Raised</th>
                        <th class="card-text">Resolved?</th>
                        <th class="card-text">Manage</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var issue in Model)
                    {
                        <tr>
                            <td class="card-text">@issue.User.UserName</td>
                            <td class="card-text">@issue.Room.Name</td>
                            <td class="card-text">@issue.Asset.Name</td>
                            <td class="card-text">@issue.MaintenanceIssues.TimeRaised</td>
                            <td class="card-text">@(issue.MaintenanceIssues.IsResolved ? "Yes" : "No")</td>
                            <td>
                                <a asp-controller="MaintenanceIssue" asp-action="DetailsStaff" asp-route-id="@issue.MaintenanceIssues.Id" class="btn btn-info">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>